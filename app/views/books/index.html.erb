<h1>Books</h1>
<table>
  <thead>
  <tr>
    <th class="title">Title</th>
    <th class="body">Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td class="title"></td>
      <td class="body"></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>

</table>

<h2>New Books</h2>
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>
